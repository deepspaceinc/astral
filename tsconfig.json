{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"moduleResolution": "node16",
		"module": "Node16",
		"outDir": "dist",
		"sourceMap": true,
		"jsx": "react"
	},
	"esModuleInterop": true,
	"allowSyntheticDefaultImports": true,
	"ts-node": {
	  "esm": true,
	  "experimentalSpecifierResolution": "node"
	},
	"include": ["src", "test.tsx", "test.tjs"]
}
